<!--miniprogram/pages/search_vehicle/search_vehicle.wxml-->
<view class='section'>
  <view class='section__title'>发动机</view>
    <picker bindchange="bindvehicle_engineChange" value="{{index_vehicle_engine}}" range="{{vehicle_engine}}">
      <view class="picker">
        {{vehicle_engine[index_vehicle_engine]}}
      </view>
      <input class='input' type='number' bindinput='noinput' placeholder='请选择发动机'></input>
    </picker>
</view>
    

<view class='section'>
  <view class='section__title'>变速器</view>
    <picker bindchange="bindvehicle_transmissionChange" value="{{index_vehicle_transmission}}" range="{{vehicle_transmission}}">
      <view class="picker">
      {{vehicle_transmission[index_vehicle_transmission]}}
      </view>
    </picker>
    <input class='input' type='number' bindinput='noinput' placeholder='请选择变速箱'></input>
</view>


<view class='section'>
  <view class='section__title'>车辆阶段</view>
    <picker bindchange="bindvehicle_phaseChange" value="{{index_vehicle_phase}}" range="{{vehicle_phase}}">
      <view class="picker">
      {{vehicle_phase[index_vehicle_phase]}}
      </view>
    </picker>
    <input class='input' type='number' bindinput='noinput' placeholder='请选择车辆阶段'></input>
</view>


<view class='section'>
  <view class='title__section'>ECU供应商：</view>
    <picker bindchange="bindvehicle_ecusupplierChange" value="{{index_vehicle_ecusupplier}}" range="{{vehicle_ecusupplier}}">
      <view class="picker">
      {{vehicle_ecusupplier[index_vehicle_ecusupplier]}}
      </view>
    </picker>
    <input class='input' type='number' bindinput='noinput' placeholder='请选择ECU供应商'></input>
</view>


<view class='section'>
  <view class='title__section'>排放：</view>
    <picker bindchange="bindvehicle_emissionChange" value="{{index_vehicle_emission}}" range="{{vehicle_emission}}">
      <view class="picker">
      {{vehicle_emission[index_vehicle_emission]}}
      </view>
    </picker>
    <input class='input' type='number' bindinput='noinput' placeholder='请选择排放'></input>
</view>


<view class='section'>
  <view class='title__section'>配置：</view>
    <picker bindchange="bindvehicle_configurationChange" value="{{index_vehicle_configuration}}" range="{{vehicle_configuration}}">
      <view class="picker">
      {{vehicle_configuration[index_vehicle_configuration]}}
      </view>
    </picker>
    <input class='input' type='number' bindinput='noinput' placeholder='请选择配置'></input>
</view>


<button bindtap='search' size='mini' class='btn'>查询</button>
<scroll-view scroll-y class='orderlist'>

<!--列表渲染-->
<view wx:for="{{jg.result.list}}" wx:key="this">
<view class='jg2'>{{item.remark}}</view>
<view class='jg1'>{{item.datetime}}</view>
</view>
</scroll-view>